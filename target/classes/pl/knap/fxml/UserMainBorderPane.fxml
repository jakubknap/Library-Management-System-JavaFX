                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="TOP_CENTER" prefHeight="215.0" prefWidth="1093.0">
                            <children>
                                <VBox alignment="TOP_RIGHT" spacing="20.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#logout" prefHeight="150.0"
                                                prefWidth="450.0" text="%logout">
                                            <graphic>
                                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../icons/logout.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button mnemonicParsing="false" onAction="#exit" prefHeight="150.0"
                                                prefWidth="450.0" text="%exit">
                                            <graphic>
                                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../icons/exit.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                            <padding>
                                                <Insets bottom="10.0"/>
                                            </padding>
                                        </Button>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </VBox>
                            </children>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </Pane>
    </center>
    <left>
        <HBox prefHeight="404.0" prefWidth="56.0" BorderPane.alignment="CENTER"/>
    </left>
</BorderPane>
