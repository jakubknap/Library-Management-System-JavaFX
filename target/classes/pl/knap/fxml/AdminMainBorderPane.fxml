    <top>
        <ImageView fitHeight="116.0" fitWidth="920.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER">
            <image>
                <Image url="@../icons/top.jpg"/>
            </image>
        </ImageView>
    </top>
    <center>
        <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="348.0" prefWidth="919.0">
                    <children>
                        <HBox alignment="TOP_CENTER" prefHeight="205.0" prefWidth="919.0" spacing="10.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#addUser" prefHeight="150.0" prefWidth="220.0"
                                        text="%admin.addUser">
                                    <graphic>
                                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../icons/addUser.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#ManageMembers" prefHeight="150.0"
