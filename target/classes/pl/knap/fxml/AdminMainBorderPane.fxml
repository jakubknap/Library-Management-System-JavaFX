                                    <graphic>
                                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../icons/updateUser.png"/>
                                            </image>
                                            <cursor>
                                                <Cursor fx:constant="OPEN_HAND"/>
                                            </cursor>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#addBook" prefHeight="150.0" prefWidth="220.0"
                                        text="%admin.addBook">
                                    <graphic>
                                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../icons/addBook.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#ManageBooks" prefHeight="150.0"
                                        prefWidth="220.0" text="%admin.manageBooks">
                                    <graphic>
                                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../icons/manageBooks.jpg"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
