<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/17" fx:controller="pl.knap.controllers.AddBookController">
    <children>
        <Label layoutX="45.0" layoutY="31.0" text="%addBook.title"/>
        <TextField fx:id="titleInput" layoutX="120.0" layoutY="27.0"/>
        <Label layoutX="28.0" layoutY="68.0" text="%addBook.authorName"/>
        <TextField fx:id="authorNameInput" layoutX="120.0" layoutY="64.0"/>
        <TextField fx:id="authorSurnameInput" layoutX="119.0" layoutY="98.0"/>
        <Label layoutX="14.0" layoutY="102.0" text="%addBook.authorSurname"/>
        <Label layoutX="21.0" layoutY="143.0" text="%addBook.category"/>
        <Label layoutX="21.0" layoutY="180.0" text="%addBook.releaseDate"/>
        <Label layoutX="45.0" layoutY="222.0" text="%addBook.isbn"/>
        <TextField fx:id="isbnInput" layoutX="121.0" layoutY="218.0"/>
        <Button layoutX="33.0" layoutY="277.0" mnemonicParsing="false" onAction="#addNewBook"
                text="%addBook.addBookButton"/>
        <Button layoutX="194.0" layoutY="277.0" mnemonicParsing="false" onAction="#backToMenu" text="%back"/>
        <DatePicker fx:id="releaseDateInput" layoutX="120.0" layoutY="176.0"/>
        <ComboBox fx:id="categoryInput" layoutX="120.0" layoutY="139.0" prefWidth="150.0"/>
    </children>
</AnchorPane>
